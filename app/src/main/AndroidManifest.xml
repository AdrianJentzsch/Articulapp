<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fabiantopfer.tabhosttest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FirstActivity"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".SecondActivity"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".add_Notiz"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ShowNote"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".EditNote"  android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".ShowMemo"  android:theme="@style/AppTheme.NoActionBar"/>

    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
